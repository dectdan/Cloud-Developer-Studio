<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap rescap">

  <Identity
    Name="ClaudeDevStudio"
    Publisher="CN=ClaudeDevStudio"
    Version="1.0.0.0" />

  <Properties>
    <DisplayName>ClaudeDevStudio</DisplayName>
    <PublisherDisplayName>ClaudeDevStudio Project</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
    <Description>Development assistant system for Claude AI - provides persistent memory, build automation, and user-controlled approvals.</Description>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.19041.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-US"/>
  </Resources>

  <Applications>
    <Application Id="ClaudeDevStudioTrayApp"
      Executable="ClaudeDevStudio.TrayApp.exe"
      EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="ClaudeDevStudio"
        Description="AI Development Assistant System"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png" />
        <uap:SplashScreen Image="Assets\SplashScreen.png" />
      </uap:VisualElements>

      <Extensions>
        <!-- Auto-start on login -->
        <uap:Extension Category="windows.startupTask">
          <uap:StartupTask
            TaskId="ClaudeDevStudioStartup"
            Enabled="true"
            DisplayName="ClaudeDevStudio" />
        </uap:Extension>
      </Extensions>
    </Application>
  </Applications>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
    <Capability Name="internetClient" />
  </Capabilities>
</Package>
