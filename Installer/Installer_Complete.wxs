<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
  
  <?define ProductName = "ClaudeDevStudio" ?>
  <?define ProductVersion = "1.0.0.0" ?>
  <?define Manufacturer = "ClaudeDevStudio" ?>
  <?define UpgradeCode = "12345678-1234-1234-1234-123456789ABC" ?>
  
  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">
    
    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perUser"
             Description="AI-powered development memory system for Claude"
             Comments="Never lose context between coding sessions" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />
    
    <!-- Add/Remove Programs Info -->
    <Property Id="ARPHELPLINK" Value="https://github.com/dectdan/Cloud-Developer-Studio" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/dectdan/Cloud-Developer-Studio" />

    <!-- Installation Directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <!-- Local AppData for per-user install -->
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="ClaudeDevStudio">
          
          <!-- CLI Tool -->
          <Directory Id="CLI_Folder" Name="CLI">
            <Component Id="CLI_Component" Guid="AAAA1111-2222-3333-4444-555555555555">
              <File Id="claudedev.exe" Source="..\bin\Release\net8.0\claudedev.exe" KeyPath="yes" />
              <File Id="claudedev.dll" Source="..\bin\Release\net8.0\claudedev.dll" />
              <File Id="claudedev.deps.json" Source="..\bin\Release\net8.0\claudedev.deps.json" />
              <File Id="claudedev.runtimeconfig.json" Source="..\bin\Release\net8.0\claudedev.runtimeconfig.json" />
              <File Id="System.IO.Pipelines.dll" Source="..\bin\Release\net8.0\System.IO.Pipelines.dll" />
              <File Id="System.Text.Encodings.Web.dll" Source="..\bin\Release\net8.0\System.Text.Encodings.Web.dll" />
              <File Id="System.Text.Json.dll" Source="..\bin\Release\net8.0\System.Text.Json.dll" />
              
              <!-- Add CLI to User PATH -->
              <Environment Id="PATH" Name="PATH" Value="[CLI_Folder]" Permanent="no" Part="last" Action="set" System="no" />
            </Component>
          </Directory>

          <!-- TrayApp -->
          <Directory Id="TrayApp_Folder" Name="TrayApp">
            <Component Id="TrayApp_Component" Guid="BBBB2222-3333-4444-5555-666666666666">
              <File Id="TrayApp.exe" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.exe" KeyPath="yes" />
              <File Id="TrayApp.dll" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.dll" />
              <File Id="TrayApp.deps.json" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.deps.json" />
              <File Id="TrayApp.runtimeconfig.json" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.runtimeconfig.json" />
            </Component>
          </Directory>

          <!-- Dashboard -->
          <Directory Id="Dashboard_Folder" Name="Dashboard" />

        </Directory>
      </Directory>

      <!-- Start Menu -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="ClaudeDevStudio">
          <Component Id="Shortcuts_Component" Guid="CCCC3333-4444-5555-6666-777777777777">
            
            <!-- Dashboard Shortcut (Main Launch Point) -->
            <Shortcut Id="DashboardShortcut"
                      Name="ClaudeDevStudio"
                      Description="Development Memory Dashboard"
                      Target="[Dashboard_Folder]ClaudeDevStudio.Dashboard.exe"
                      WorkingDirectory="Dashboard_Folder" />

            <!-- TrayApp Shortcut -->
            <Shortcut Id="TrayShortcut"
                      Name="ClaudeDevStudio Tray"
                      Description="System Tray Application"
                      Target="[TrayApp_Folder]ClaudeDevStudio.TrayApp.exe"
                      WorkingDirectory="TrayApp_Folder" />
            
            <!-- CLI Shortcut -->
            <Shortcut Id="CLIShortcut"
                      Name="ClaudeDevStudio CLI"
                      Description="Command-line interface"
                      Target="[%ComSpec]"
                      Arguments="/k &quot;[CLI_Folder]claudedev.exe&quot; help"
                      WorkingDirectory="CLI_Folder" />
            
            <!-- Uninstall Shortcut -->
            <Shortcut Id="UninstallProduct"
                      Name="Uninstall ClaudeDevStudio"
                      Target="[SystemFolder]msiexec.exe"
                      Arguments="/x [ProductCode]"
                      Description="Uninstalls ClaudeDevStudio" />
            
            <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall" />
            <RegistryValue Root="HKCU" Key="Software\ClaudeDevStudio" Name="installed" Type="integer" Value="1" KeyPath="yes" />
          </Component>
        </Directory>
      </Directory>

      <!-- User Documents - OneDrive Folders -->
      <Directory Id="PersonalFolder">
        <Directory Id="OneDriveFolder" Name="OneDrive">
          <Directory Id="OneDriveDocuments" Name="Documents">
            <Directory Id="ClaudeDevStudioData" Name="ClaudeDevStudio">
              <Directory Id="ProjectsFolder" Name="Projects" />
              <Directory Id="BackupsFolder" Name="Backups" />
            </Directory>
          </Directory>
        </Directory>
      </Directory>
    </Directory>

    <!-- Registry Keys -->
    <Component Id="Registry_Component" Directory="INSTALLFOLDER" Guid="DDDD4444-5555-6666-7777-888888888888">
      <RegistryKey Root="HKCU" Key="Software\ClaudeDevStudio">
        <RegistryValue Type="string" Name="InstallPath" Value="[INSTALLFOLDER]" KeyPath="yes" />
        <RegistryValue Type="string" Name="Version" Value="$(var.ProductVersion)" />
        <RegistryValue Type="string" Name="DashboardPath" Value="[Dashboard_Folder]" />
        <RegistryValue Type="string" Name="TrayAppPath" Value="[TrayApp_Folder]" />
        <RegistryValue Type="string" Name="CLIPath" Value="[CLI_Folder]" />
      </RegistryKey>
    </Component>

    <!-- Auto-start TrayApp -->
    <Component Id="Autostart_Component" Directory="TrayApp_Folder" Guid="EEEE5555-6666-7777-8888-999999999999">
      <RegistryKey Root="HKCU" Key="Software\Microsoft\Windows\CurrentVersion\Run">
        <RegistryValue Type="string" Name="ClaudeDevStudio" Value="[TrayApp_Folder]ClaudeDevStudio.TrayApp.exe" KeyPath="yes" />
      </RegistryKey>
    </Component>

    <!-- Features -->
    <Feature Id="Complete" Title="ClaudeDevStudio" Level="1" Description="Complete installation" Display="expand" ConfigurableDirectory="INSTALLFOLDER">
      
      <Feature Id="CLI_Feature" Title="Command Line Tool" Level="1" Description="CLI tool for project memory management">
        <ComponentRef Id="CLI_Component" />
      </Feature>
      
      <Feature Id="TrayApp_Feature" Title="System Tray App" Level="1" Description="Background monitoring and quick access">
        <ComponentRef Id="TrayApp_Component" />
        <ComponentRef Id="Autostart_Component" />
      </Feature>
      
      <Feature Id="Dashboard_Feature" Title="Dashboard" Level="1" Description="Visual project management interface">
        <ComponentGroupRef Id="DashboardFiles" />
      </Feature>
      
      <Feature Id="Common_Feature" Title="Common Components" Level="1" Description="Shared components">
        <ComponentRef Id="Shortcuts_Component" />
        <ComponentRef Id="Registry_Component" />
      </Feature>
    </Feature>

    <!-- UI -->
    <UIRef Id="WixUI_FeatureTree" />
    <UIRef Id="WixUI_ErrorProgressText" />

  </Product>
  
  <!-- Include the harvested Dashboard files -->
  <Fragment>
    <ComponentGroup Id="DashboardFiles">
      <ComponentGroupRef Id="DashboardFilesGroup" />
    </ComponentGroup>
  </Fragment>
  
</Wix>
