<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ClaudeDevStudio.Dashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClaudeDevStudio.Dashboard"
    Title="ClaudeDevStudio">

    <Grid>
        <NavigationView x:Name="NavView"
                       IsBackButtonVisible="Collapsed"
                       IsSettingsVisible="True"
                       PaneDisplayMode="Left"
                       SelectionChanged="NavView_SelectionChanged">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Projects" Tag="projects" Icon="Folder">
                    <NavigationViewItem.InfoBadge>
                        <InfoBadge x:Name="ProjectsBadge" Value="0"/>
                    </NavigationViewItem.InfoBadge>
                </NavigationViewItem>
                
                <NavigationViewItem Content="Activity" Tag="activity" Icon="Calendar"/>
                
                <NavigationViewItem Content="Approvals" Tag="approvals" Icon="Accept">
                    <NavigationViewItem.InfoBadge>
                        <InfoBadge x:Name="ApprovalsBadge" Value="0" Style="{ThemeResource AttentionValueInfoBadgeStyle}"/>
                    </NavigationViewItem.InfoBadge>
                </NavigationViewItem>
                
                <NavigationViewItemSeparator/>
                
                <NavigationViewItem Content="Memory" Tag="memory" Icon="Library"/>
                <NavigationViewItem Content="Patterns" Tag="patterns" Icon="AlignLeft"/>
                <NavigationViewItem Content="Mistakes" Tag="mistakes" Icon="Important"/>
            </NavigationView.MenuItems>
            
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Help" Tag="help" Icon="Help"/>
                <NavigationViewItem Content="About" Tag="about" Icon="Contact"/>
            </NavigationView.FooterMenuItems>

            <Frame x:Name="ContentFrame" Padding="24"/>
        </NavigationView>
    </Grid>
</Window>
