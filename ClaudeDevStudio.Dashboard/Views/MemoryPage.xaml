<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClaudeDevStudio.Dashboard.Views.MemoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Memory Browser" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Facts, patterns, and lessons from past sessions" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                <!-- Facts Section -->
                <StackPanel>
                    <TextBlock Text="Facts" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <TextBlock x:Name="FactsText" 
                                     Text="Loading facts..."
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Patterns Section -->
                <StackPanel>
                    <TextBlock Text="Discovered Patterns" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <ItemsRepeater x:Name="PatternsList">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="12"
                                       Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding Pattern}" 
                                                 TextWrapping="Wrap"/>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding Confidence}" 
                                                     Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                     FontWeight="SemiBold"/>
                                            <TextBlock Text="%" 
                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>

                <!-- Mistakes Section -->
                <StackPanel>
                    <TextBlock Text="Lessons Learned" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <ItemsRepeater x:Name="MistakesList">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                       BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="12"
                                       Margin="0,0,0,8">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Mistake}" 
                                                 FontWeight="SemiBold"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Lesson}" 
                                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
