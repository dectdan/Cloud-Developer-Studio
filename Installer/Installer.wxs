<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
  
  <?define ProductName = "ClaudeDevStudio" ?>
  <?define ProductVersion = "1.0.1.0" ?>
  <?define Manufacturer = "Daniel E Gain" ?>
  <?define UpgradeCode = "12345678-1234-1234-1234-123456789ABC" ?>
  
  <?define DashboardSourceDir = "..\ClaudeDevStudio.Dashboard\bin\Release\net8.0-windows10.0.19041.0" ?>
  
  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">
    
    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perUser"
             Description="AI-powered development memory system for Claude"
             Comments="Never lose context between coding sessions" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />
    
    <!-- Program Icon -->
    <Icon Id="ProductIcon" SourceFile="Assets\AppIcon.ico" />
    <Property Id="ARPPRODUCTICON" Value="ProductIcon" />
    
    <!-- Add/Remove Programs Info -->
    <Property Id="ARPHELPLINK" Value="https://github.com/dectdan/Cloud-Developer-Studio" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/dectdan/Cloud-Developer-Studio" />

    <!-- Installation Directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <!-- Local AppData for per-user install -->
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="ClaudeDevStudio">
          
          <!-- Auto-Configuration Script -->
          <Component Id="ConfigScript_Component" Guid="2222BBBB-CCCC-DDDD-EEEE-FFFFFFFFFFFF">
            <File Id="ConfigureClaudeDesktop.ps1" Source="ConfigureClaudeDesktop.ps1" KeyPath="yes" />
          </Component>
          
          <!-- CLI Tool -->
          <Directory Id="CLIFolder" Name="CLI">
            <Component Id="CLI_Component" Guid="AAAA1111-2222-3333-4444-555555555555">
              <File Id="claudedev.exe" Source="..\bin\Release\net8.0\claudedev.exe" KeyPath="yes" />
              <File Id="claudedev.dll" Source="..\bin\Release\net8.0\claudedev.dll" />
              <File Id="claudedev.deps.json" Source="..\bin\Release\net8.0\claudedev.deps.json" />
              <File Id="claudedev.runtimeconfig.json" Source="..\bin\Release\net8.0\claudedev.runtimeconfig.json" />
              <File Id="System.IO.Pipelines.dll" Source="..\bin\Release\net8.0\System.IO.Pipelines.dll" />
              <File Id="System.Text.Encodings.Web.dll" Source="..\bin\Release\net8.0\System.Text.Encodings.Web.dll" />
              <File Id="System.Text.Json.dll" Source="..\bin\Release\net8.0\System.Text.Json.dll" />
              
              <!-- Add CLI to User PATH -->
              <Environment Id="PATH" Name="PATH" Value="[CLIFolder]" Permanent="no" Part="last" Action="set" System="no" />
            </Component>
          </Directory>

          <!-- TrayApp -->
          <Directory Id="TrayAppFolder" Name="TrayApp">
            <Component Id="TrayApp_Component" Guid="BBBB2222-3333-4444-5555-666666666666">
              <File Id="TrayApp.exe" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.exe" KeyPath="yes" />
              <File Id="TrayApp.dll" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.dll" />
              <File Id="TrayApp.deps.json" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.deps.json" />
              <File Id="TrayApp.runtimeconfig.json" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.runtimeconfig.json" />
            </Component>
          </Directory>

          <!-- Dashboard - will be populated by heat.exe harvest -->
          <Directory Id="DashboardFolder" Name="Dashboard" />

          <!-- DebugView (Bundled - No separate download needed!) -->
          <Directory Id="DebugViewFolder" Name="DebugView">
            <Component Id="DebugView_Component" Guid="DDDD4444-5555-6666-7777-888888888888">
              <File Id="dbgview64.exe" Source="..\Bundled\dbgview64.exe" KeyPath="yes" />
              <File Id="Dbgview.exe" Source="..\Bundled\Dbgview.exe" />
              <File Id="Dbgview64a.exe" Source="..\Bundled\Dbgview64a.exe" />
              <File Id="Dbgview.chm" Source="..\Bundled\Dbgview.chm" />
              <File Id="DebugView_Eula.txt" Source="..\Bundled\Eula.txt" />
            </Component>
          </Directory>

          <!-- MCP Server (Bundled - Auto-configured for Claude Desktop!) -->
          <Directory Id="MCPServerFolder" Name="mcp-server">
            <Component Id="MCPServer_Component" Guid="EEEE5555-6666-7777-8888-999999999999">
              <File Id="mcp_index.js" Source="..\mcp-server\index.js" KeyPath="yes" />
              <File Id="mcp_package.json" Source="..\mcp-server\package.json" />
              <File Id="mcp_README.md" Source="..\mcp-server\README.md" />
            </Component>
          </Directory>

        </Directory>
      </Directory>

      <!-- Start Menu -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="ClaudeDevStudio">
          <Component Id="Shortcuts_Component" Guid="CCCC3333-4444-5555-6666-777777777777">
            
            <!-- Dashboard Shortcut (Main Launch Point) -->
            <Shortcut Id="DashboardShortcut"
                      Name="ClaudeDevStudio"
                      Description="Development Memory Dashboard"
                      Target="[DashboardFolder]ClaudeDevStudio.Dashboard.exe"
                      WorkingDirectory="DashboardFolder"
                      Icon="ProductIcon" />

            <!-- TrayApp Shortcut -->
            <Shortcut Id="TrayShortcut"
                      Name="ClaudeDevStudio Tray"
                      Description="System Tray Application"
                      Target="[TrayAppFolder]ClaudeDevStudio.TrayApp.exe"
                      WorkingDirectory="TrayAppFolder"
                      Icon="ProductIcon" />
            
            <!-- Uninstall Shortcut -->
            <Shortcut Id="UninstallProduct"
                      Name="Uninstall ClaudeDevStudio"
                      Target="[SystemFolder]msiexec.exe"
                      Arguments="/x [ProductCode]"
                      Description="Uninstalls ClaudeDevStudio" />
            
            <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall" />
            <RegistryValue Root="HKCU" Key="Software\ClaudeDevStudio" Name="installed" Type="integer" Value="1" KeyPath="yes" />
          </Component>
        </Directory>
      </Directory>
    </Directory>

    <!-- Registry Keys -->
    <Component Id="Registry_Component" Directory="INSTALLFOLDER" Guid="FFFF6666-7777-8888-9999-AAAAAAAAAAAA">
      <RegistryKey Root="HKCU" Key="Software\ClaudeDevStudio">
        <RegistryValue Type="string" Name="InstallPath" Value="[INSTALLFOLDER]" KeyPath="yes" />
        <RegistryValue Type="string" Name="Version" Value="$(var.ProductVersion)" />
        <RegistryValue Type="string" Name="DashboardPath" Value="[DashboardFolder]" />
        <RegistryValue Type="string" Name="TrayAppPath" Value="[TrayAppFolder]" />
        <RegistryValue Type="string" Name="CLIPath" Value="[CLIFolder]" />
        <RegistryValue Type="string" Name="DebugViewPath" Value="[DebugViewFolder]" />
        <RegistryValue Type="string" Name="MCPServerPath" Value="[MCPServerFolder]" />
      </RegistryKey>
    </Component>

    <!-- Auto-start TrayApp -->
    <Component Id="Autostart_Component" Directory="TrayAppFolder" Guid="1111AAAA-BBBB-CCCC-DDDD-EEEEEEEEEEEE">
      <RegistryKey Root="HKCU" Key="Software\Microsoft\Windows\CurrentVersion\Run">
        <RegistryValue Type="string" Name="ClaudeDevStudio" Value="&quot;[TrayAppFolder]ClaudeDevStudio.TrayApp.exe&quot;" KeyPath="yes" />
      </RegistryKey>
    </Component>

    <!-- Features - Everything installed, no choices -->
    <Feature Id="Complete" Title="ClaudeDevStudio" Level="1" Description="Complete installation">
      <ComponentRef Id="CLI_Component" />
      <ComponentRef Id="TrayApp_Component" />
      <ComponentRef Id="Autostart_Component" />
      <ComponentGroupRef Id="DashboardFilesGroup" />
      <ComponentRef Id="DebugView_Component" />
      <ComponentRef Id="MCPServer_Component" />
      <ComponentRef Id="Shortcuts_Component" />
      <ComponentRef Id="Registry_Component" />
      <ComponentRef Id="ConfigScript_Component" />
    </Feature>

    <!-- UI - Minimal dialogs, no choices -->
    <UIRef Id="WixUI_Minimal" />
    <UIRef Id="WixUI_ErrorProgressText" />
    
    <!-- License Agreement -->
    <WixVariable Id="WixUILicenseRtf" Value="License.rtf" />

    <!-- Custom Action: Auto-configure Claude Desktop -->
    <CustomAction Id="ConfigureClaudeDesktop"
                  Directory="INSTALLFOLDER"
                  ExeCommand="powershell.exe -ExecutionPolicy Bypass -NoProfile -File &quot;[INSTALLFOLDER]ConfigureClaudeDesktop.ps1&quot; -MCPServerPath &quot;[MCPServerFolder]index.js&quot;"
                  Execute="deferred"
                  Return="ignore"
                  Impersonate="yes" />
    
    <InstallExecuteSequence>
      <Custom Action="ConfigureClaudeDesktop" After="InstallFiles">NOT Installed OR REINSTALL</Custom>
    </InstallExecuteSequence>

  </Product>
</Wix>
