<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
  
  <?define ProductName = "Claude Developer Studio" ?>
  <?define ProductVersion = "1.0.0.0" ?>
  <?define Manufacturer = "ClaudeDevStudio" ?>
  <?define UpgradeCode = "12345678-1234-1234-1234-123456789ABC" ?>
  
  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">
    
    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perUser"
             Description="AI-powered development memory system"
             Comments="Never lose context between coding sessions" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />
    
    <!-- Add/Remove Programs Info -->
    <Property Id="ARPHELPLINK" Value="https://github.com/dectdan/Cloud-Developer-Studio" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/dectdan/Cloud-Developer-Studio" />

    <!-- Installation Directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <!-- Local AppData for per-user install -->
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="ClaudeDevStudio">
          
          <!-- CLI Tool -->
          <Component Id="MainExecutable" Guid="ABCD1234-5678-90AB-CDEF-123456789ABC">
            <File Id="claudedev.exe" Source="..\bin\Release\net8.0\claudedev.exe" KeyPath="yes" />
            <File Id="claudedev.dll" Source="..\bin\Release\net8.0\claudedev.dll" />
            <File Id="claudedev.deps.json" Source="..\bin\Release\net8.0\claudedev.deps.json" />
            <File Id="claudedev.runtimeconfig.json" Source="..\bin\Release\net8.0\claudedev.runtimeconfig.json" />
            
            <!-- Add to User PATH (not System PATH since it's per-user) -->
            <Environment Id="PATH" Name="PATH" Value="[INSTALLFOLDER]" Permanent="no" Part="last" Action="set" System="no" />
          </Component>

          <!-- TrayApp Directory -->
          <Directory Id="TrayAppFolder" Name="TrayApp">
            <Component Id="TrayAppExecutable" Guid="AAAA1111-2222-3333-4444-555555555555">
              <File Id="TrayApp.exe" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.exe" KeyPath="yes" />
              <File Id="TrayApp.dll" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.dll" />
              <File Id="TrayApp.deps.json" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.deps.json" />
              <File Id="TrayApp.runtimeconfig.json" Source="..\ClaudeDevStudio.UI\bin\Release\net8.0-windows\ClaudeDevStudio.TrayApp.runtimeconfig.json" />
            </Component>
          </Directory>

          <!-- Dashboard Directory -->
          <Directory Id="DashboardFolder" Name="Dashboard">
            <Component Id="DashboardExecutable" Guid="BBBB2222-3333-4444-5555-666666666666">
              <File Id="Dashboard.exe" Source="..\ClaudeDevStudio.Dashboard\bin\Release\net8.0-windows10.0.19041.0\ClaudeDevStudio.Dashboard.exe" KeyPath="yes" />
              <File Id="Dashboard.dll" Source="..\ClaudeDevStudio.Dashboard\bin\Release\net8.0-windows10.0.19041.0\ClaudeDevStudio.Dashboard.dll" />
              <File Id="Dashboard.deps.json" Source="..\ClaudeDevStudio.Dashboard\bin\Release\net8.0-windows10.0.19041.0\ClaudeDevStudio.Dashboard.deps.json" />
              <File Id="Dashboard.runtimeconfig.json" Source="..\ClaudeDevStudio.Dashboard\bin\Release\net8.0-windows10.0.19041.0\ClaudeDevStudio.Dashboard.runtimeconfig.json" />
            </Component>
          </Directory>

        </Directory>
      </Directory>

      <!-- Start Menu -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Claude Developer Studio">
          <Component Id="ApplicationShortcuts" Guid="EF9F5678-90AB-CDEF-1234-567890ABCDEF">
            
            <!-- CLI Shortcut -->
            <Shortcut Id="CLIShortcut"
                      Name="Claude Dev CLI"
                      Description="Command-line interface"
                      Target="[INSTALLFOLDER]claudedev.exe"
                      Arguments="help"
                      WorkingDirectory="INSTALLFOLDER" />
            
            <!-- Dashboard Shortcut -->
            <Shortcut Id="DashboardShortcut"
                      Name="Claude Developer Studio"
                      Description="Dashboard and project manager"
                      Target="[DashboardFolder]ClaudeDevStudio.Dashboard.exe"
                      WorkingDirectory="DashboardFolder" />

            <!-- TrayApp Shortcut -->
            <Shortcut Id="TrayAppShortcut"
                      Name="Claude Dev Tray"
                      Description="System tray application"
                      Target="[TrayAppFolder]ClaudeDevStudio.TrayApp.exe"
                      WorkingDirectory="TrayAppFolder" />
            
            <!-- Uninstall Shortcut -->
            <Shortcut Id="UninstallProduct"
                      Name="Uninstall Claude Developer Studio"
                      Target="[SystemFolder]msiexec.exe"
                      Arguments="/x [ProductCode]"
                      Description="Uninstalls Claude Developer Studio" />
            
            <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall" />
            <RegistryValue Root="HKCU" Key="Software\ClaudeDevStudio" Name="installed" Type="integer" Value="1" KeyPath="yes" />
          </Component>
        </Directory>
      </Directory>

      <!-- User Documents - OneDrive Folders -->
      <Directory Id="PersonalFolder">
        <Directory Id="OneDriveFolder" Name="OneDrive">
          <Directory Id="OneDriveDocuments" Name="Documents">
            <Directory Id="ClaudeDevStudioData" Name="ClaudeDevStudio">
              <Directory Id="ProjectsFolder" Name="Projects" />
              <Directory Id="BackupsFolder" Name="Backups" />
            </Directory>
          </Directory>
        </Directory>
      </Directory>
    </Directory>

    <!-- Registry Keys for Auto-Discovery -->
    <Component Id="RegistryKeys" Directory="INSTALLFOLDER" Guid="12340000-0000-0000-0000-000000000001">
      <RegistryKey Root="HKCU" Key="Software\ClaudeDevStudio">
        <RegistryValue Type="string" Name="InstallPath" Value="[INSTALLFOLDER]" />
        <RegistryValue Type="string" Name="Version" Value="$(var.ProductVersion)" />
        <RegistryValue Type="string" Name="MemoryPath" Value="[OneDriveDocuments]ClaudeDevStudio" />
      </RegistryKey>
    </Component>

    <!-- Auto-start TrayApp (optional - user can disable via Task Manager Startup) -->
    <Component Id="TrayAppStartup" Directory="TrayAppFolder" Guid="CCCC3333-4444-5555-6666-777777777777">
      <RegistryKey Root="HKCU" Key="Software\Microsoft\Windows\CurrentVersion\Run">
        <RegistryValue Type="string" Name="ClaudeDevStudio" Value="[TrayAppFolder]ClaudeDevStudio.TrayApp.exe" KeyPath="yes" />
      </RegistryKey>
    </Component>

    <!-- Features -->
    <Feature Id="ProductFeature" Title="Claude Developer Studio" Level="1" Description="Complete installation">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="TrayAppExecutable" />
      <ComponentRef Id="DashboardExecutable" />
      <ComponentRef Id="ApplicationShortcuts" />
      <ComponentRef Id="RegistryKeys" />
      <ComponentRef Id="TrayAppStartup" />
    </Feature>

    <!-- UI -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

  </Product>
</Wix>
