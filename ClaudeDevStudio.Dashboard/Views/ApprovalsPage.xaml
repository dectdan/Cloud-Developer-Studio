<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClaudeDevStudio.Dashboard.Views.ApprovalsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Pending Approvals" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Review and approve Claude's requested actions" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Approvals List -->
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="ApprovalsContainer" Spacing="12">
                <!-- Empty state -->
                <InfoBar x:Name="EmptyState"
                        Title="No pending approvals"
                        Message="All actions have been reviewed. Claude will request approval for sensitive operations."
                        Severity="Success"
                        IsOpen="True"
                        IsClosable="False"/>

                <!-- Approvals will be added here dynamically -->
                <ItemsRepeater x:Name="ApprovalsList" ItemsSource="{x:Bind PendingApprovals}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   BorderBrush="{ThemeResource SystemControlForegroundAccentBrush}"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Padding="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Spacing="8">
                                        <TextBlock Text="Claude wants to:" FontWeight="SemiBold" FontSize="16"/>
                                        <TextBlock Text="{Binding Action}" TextWrapping="Wrap" FontSize="14"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Margin="0,12,0,0" Spacing="4">
                                        <TextBlock Text="Details:" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Details}" 
                                                 TextWrapping="Wrap"
                                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{Binding RiskLevel}" 
                                                 Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                                        <Button Content="Approve" 
                                               Style="{StaticResource AccentButtonStyle}"
                                               Click="Approve_Click" 
                                               Tag="{Binding Id}"/>
                                        <Button Content="Deny" 
                                               Click="Deny_Click" 
                                               Tag="{Binding Id}"/>
                                        <CheckBox Content="Always allow this type of action" 
                                                 Margin="16,0,0,0"
                                                 Tag="{Binding Id}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
